<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets">
    <h:head>
        <title>Create Customers</title>
    </h:head>
    <ui:composition template="template/common/commonLayout.xhtml">
        <ui:define name="header">
            <h:form >
                <div align="right">
                    <div class="smallButton">

                        <h:commandButton value="View Cart" action="#{myProductController.viewCart()}"></h:commandButton>
                    </div>
                </div>
            </h:form>
        </ui:define>
        <ui:define name="leftSide">

            <nav>
                <ul>
                    <li><h:graphicImage value="/resources/images/tvPicture.jpg" width="150"/></li>
                    <li> <h:graphicImage value="/resources/images/gtr-wiper-blade.jpg" width="150"/></li>
                    <li><h:graphicImage value="/resources/images/glove.jpg" width="150"/></li>
                    <li><h:graphicImage value="/resources/images/childrenshoes.png" width="150"/></li>
                    <li><h:graphicImage value="/resources/images/blanket.jpg" width="150"/></li>
                </ul>


            </nav>
        </ui:define>
        <ui:define name="content">
            <h:body>
                <h:form>
                    <h:dataTable value="#{myProductController.items}" var="product">
                        <h:column >
                            <f:facet name="header">
                                <h:outputLabel value="#{msgs.productName}" />
                            </f:facet>
                            <h:outputLabel value="#{product.productName}"/>

                        </h:column>
                        <h:column>
                            <f:facet name="header">
                                <h:outputLabel value="#{msgs.unitPrice}" />
                            </f:facet>
                            <h:outputLabel value="#{product.unitPrice}"/>
                        </h:column>
                        <h:column>
                            <f:facet name="header">
                                <h:outputLabel value="#{msgs.unitsOnHand}" />
                            </f:facet>
                            <h:outputLabel value="#{product.unitsOnHand}"/>
                        </h:column>
                        <h:column>

                            <div class="smallButton">
                                <h:commandButton value="Add to Cart" action="#{myProductController.addItem(product)}"></h:commandButton>
                            </div>
                        </h:column>


                    </h:dataTable>

                </h:form>
            </h:body>
        </ui:define>




    </ui:composition>
</html>

